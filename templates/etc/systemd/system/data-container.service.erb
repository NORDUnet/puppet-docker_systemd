[Unit]
Description=Docker Data Container for <%= @title %>
Requires=docker.service
After=docker.service<% if @depends %><% @depends.each do |dep| %><%= " #{dep}.service" %><% end %><% end %>

[Service]
Type=oneshot
Restart=no
SuccessExitStatus=1
ExecStart=/usr/bin/docker run --entrypoint=/bin/true \
    <% if @volumes_from  %><% @volumes_from.each do |container| %><%= " --volumes-from #{container}" %><% end %><% end %> \
    --name <%= @title %> \
    <%= @image %>
ExecStop=/usr/bin/docker stop <%= @title %>

[Install]
WantedBy=multi-user.target
